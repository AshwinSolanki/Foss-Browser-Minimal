<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="ContentDescription"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/ib_settings"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@string/setting_label"
                android:gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ib_settings"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/ib_reload"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/icon_settings"
                android:background="?attr/actionBarItemBackground" />

            <ImageButton
                android:id="@+id/ib_reload"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_refresh"
                android:background="?attr/actionBarItemBackground" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" >

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_javaScript"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:text="@string/setting_title_javascript" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_dom"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:text="@string/setting_title_dom" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cookie"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="0dp"
                android:ellipsize="end"
                android:text="@string/setting_title_cookie" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" >

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_adBlock"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:text="@string/setting_title_adblock"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_Fingerprint"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:text="@string/setting_title_fingerPrint" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_history"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="0dp"
                android:ellipsize="end"
                android:text="@string/album_title_history"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp" >

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_image"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:text="@string/setting_title_images"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_desktopMode"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:text="@string/menu_desktopView" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_night"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="0dp"
                android:ellipsize="end"
                android:text="@string/menu_nightView"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_hint" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialog_title"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/app_name"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:layout_marginStart="20dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/chip_cookie_WL"
                android:gravity="center_vertical"
                android:text="@string/setting_title_whitelist"
                android:textAppearance="?attr/textAppearanceBody1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/chip_cookie_WL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/chip_dom_WL"
                android:text=""
                app:chipIcon="@drawable/icon_cookie"
                app:chipIconEnabled="true"
                app:chipStartPadding="4dp"
                app:chipEndPadding="4dp"
                app:textEndPadding="0dp"
                app:textStartPadding="0dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/chip_dom_WL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/chip_javaScript_WL"
                android:text=""
                app:chipIcon="@drawable/icon_remote"
                app:chipIconEnabled="true"
                app:chipStartPadding="4dp"
                app:chipEndPadding="4dp"
                app:textEndPadding="0dp"
                app:textStartPadding="0dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/chip_javaScript_WL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text=""
                app:chipIcon="@drawable/icon_java"
                app:chipIconEnabled="true"
                app:chipStartPadding="4dp"
                app:chipEndPadding="4dp"
                app:textEndPadding="0dp"
                app:textStartPadding="0dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/chip_allow_popups_WL"
                android:gravity="center_vertical"
                android:text="@string/setting_title_tab"
                android:textAppearance="?attr/textAppearanceBody1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/chip_allow_popups_WL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/chip_dom_Tab"
                android:text=""
                app:chipIcon="@drawable/icon_popup"
                app:chipIconEnabled="true"
                app:chipStartPadding="4dp"
                app:chipEndPadding="4dp"
                app:textEndPadding="0dp"
                app:textStartPadding="0dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/chip_dom_Tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/chip_javaScript_Tab"
                android:text=""
                app:chipIcon="@drawable/icon_remote"
                app:chipIconEnabled="true"
                app:chipStartPadding="4dp"
                app:chipEndPadding="4dp"
                app:textEndPadding="0dp"
                app:textStartPadding="0dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:id="@+id/chip_javaScript_Tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text=""
                app:chipIcon="@drawable/icon_java"
                app:chipIconEnabled="true"
                app:chipStartPadding="4dp"
                app:chipEndPadding="4dp"
                app:textEndPadding="0dp"
                app:textStartPadding="0dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>


